# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-nano
USE_SEMANTIC_RETRIEVAL=true
SEED_SEMANTIC_ON_START=false

# Vector Database (pgvector on PostgreSQL)
# For semantic retrieval MVP, we use PostgreSQL with pgvector extension.
# Example (Supabase/Neon/Railway):
# DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require
# Note: Ensure the 'vector' extension is enabled or permission exists to run:
#   CREATE EXTENSION IF NOT EXISTS vector;

# Application Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
# Default local fallback (keyword-only mode)
DATABASE_URL=sqlite:///jusimples.db

# Legal Data Sources
LEXML_BASE_URL=https://www.lexml.gov.br
SCRAPING_DELAY=1

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Logging
LOG_LEVEL=INFO
